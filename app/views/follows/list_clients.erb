<!--The records that an user (Stylist) is following (Clients)-->

<br>
<h1 class="text-center login-title">List of Clients (<%=current_user.followers_count%>)</h1>
<div class="container">
  <div class="well col-xs-8 col-sm-8 col-md-8 col-lg-8 col-xs-offset-2 col-sm-offset-2 col-md-offset-2 col-lg-offset-2">
    <div class="row user-row">
      <table>
        <thead>

        <%  @user_list = current_user.user_followers;
        %>

        <% @user_list.each do | clients | %>

            <%
               @user_detail = UserDetail.find_by_user_id(clients.id)
            %>

            <tr>

              <div class="row user-row">
                <div class="col-xs-3 col-sm-2 col-md-1 col-lg-1">

                  <% if @user_detail.profile_pic.exists? %>
                      <img alt="User Pic" src="<%=@user_detail.profile_pic.url%>" class="img-circle" width="50" height="50">
                  <%else%>
                      <img alt="User Pic" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=50" class="img-circle">
                  <%end%>

                </div>
                <div class="col-xs-8 col-sm-9 col-md-10 col-lg-10">
                  <strong> Name: <%=  @user_detail.first_name%> <%= @user_detail.last_name %> </strong><br>
                  <span class="text-muted"> Email: <%=  clients.email %>, Phone Number: <%= @user_detail.day_time_phone%> , Employer: <%= @user_detail.employer %> </span>
                </div>
                <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                  <%= link_to '', new_lookbook_path(:type => clients.id), class: "glyphicon glyphicon-cloud-upload"  %>

                  <%= link_to '', edit_user_detail_path( :id  => @user_detail.id), class:"glyphicon glyphicon-edit"%>

                  <%= link_to 'View LookBooks', books_path( :id  =>  clients.id)%>

                </div>


              </div>


            </tr>
        <% end %>

        </thead>

        <tbody>

        </tbody>
      </table>





      <br>
      <%= link_to '', welcome_show_path, class: "glyphicon glyphicon-home"%>

    </div>

  </div>
</div>
